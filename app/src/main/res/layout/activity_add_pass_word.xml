<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        tools:context="com.suda.zph.passwordmanager.activity.AddPassWordActivity">

    <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:rowCount="7"
            android:columnCount="4">
        <TextView
                android:id="@+id/tv_add_title"
                android:text=""
                android:textSize="30sp"
                android:gravity="center"
                android:layout_column="0"
                android:layout_row="0"
                android:layout_columnSpan="4"
                android:layout_width="300dp"
                android:layout_height="wrap_content"/>
        <TextView
                android:layout_column="0"
                android:layout_row="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="20sp"
                android:text="来源:"/>
        <EditText
                android:id="@+id/tv_add_source"
                android:layout_column="1"
                android:layout_row="1"
                android:layout_columnSpan="3"
                android:textSize="20sp"
                android:layout_width="250dp"
                android:layout_height="match_parent"/>
        <TextView
                android:layout_column="0"
                android:layout_row="2"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="账户:"/>
        <EditText
                android:id="@+id/tv_add_user_name"
                android:layout_column="1"
                android:layout_row="2"
                android:layout_columnSpan="3"
                android:textSize="20sp"
                android:layout_width="250dp"
                android:layout_height="match_parent">
        </EditText>
        <TextView
                android:layout_column="0"
                android:layout_row="3"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="密码"/>
        <EditText
                android:id="@+id/tv_add_user_password"
                android:layout_column="1"
                android:layout_row="3"
                android:layout_columnSpan="3"
                android:textSize="20sp"
                android:layout_width="250dp"
                android:layout_height="match_parent">
        </EditText>
        <TextView
                android:layout_column="0"
                android:layout_row="4"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="备注:"/>
        <EditText
                android:id="@+id/tv_add_remarks"
                android:layout_column="1"
                android:layout_row="4"
                android:layout_columnSpan="3"
                android:textSize="20sp"
                android:layout_width="250dp"
                android:layout_height="match_parent"/>

        <Button
                android:id="@+id/tv_add_but_submit"
                android:layout_column="0"
                android:layout_row="5"
                android:layout_columnSpan="4"
                android:textSize="20sp"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="添加"/>
        <TextView
                android:text=""
                android:textSize="30sp"
                android:gravity="center"
                android:layout_column="0"
                android:layout_row="6"
                android:layout_columnSpan="4"
                android:layout_width="300dp"
                android:layout_height="wrap_content"/>
    </GridLayout>
</LinearLayout>
